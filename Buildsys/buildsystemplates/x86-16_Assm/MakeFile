flags= -f elf
ldflags= -T PROJ_NAME.ld

.PHONY: all clean 

all: clean PROJ_NAME

PROJ_NAME: PROJ_NAME.elf
	objcopy -O binary $^ -o PROJ_NAME

PROJ_NAME.elf: PROJ_NAME.o
	ld $(ldflags) $^ -o $@ 
	chmod +x PROJ_NAME.elf

PROJ_NAME.o: PROJ_NAME.asm PROJ_NAME.h
	nasm $(flags) $^ -o $@

clean:
	rm -rf *.o *.elf *.bin PROJ_NAME

